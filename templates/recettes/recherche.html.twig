{% extends 'base.html.twig' %}
{% block title %}Recherche{% endblock %}

{% block body %}
<h1>Decouvrez des recettes</h1>
    {{ form_start(searchForm) }}
    <div class="form-container">
        <div class="form-row">
            {{ form_label(searchForm.searchTerm) }}
            {{ form_widget(searchForm.searchTerm, {'attr': {'class': 'input'}}) }}
        </div>
        <div class="form-row">
            {{ form_label(searchForm.ingredientFilter) }}
            {{ form_widget(searchForm.ingredientFilter, {'attr': {'class': 'input'}}) }}
        </div>
        <button type="submit" class="form-button">Chercher</button>
    </div>
        {{ form_end(searchForm) }}

    {% if recettes is not empty %}

        <h2>Resultats</h2>
            <section class="recettes-section">
                {% for recette in recettes %}
                    <a class="recette-link" href="{{path('app_detail', {'id': recette.id}) }}">{{ recette.nom }}</a>
                {% endfor %}
            </section>
    {% endif %}
{% endblock %}


