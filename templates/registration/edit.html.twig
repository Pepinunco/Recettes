{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('css/style.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('css/normalize.css') }}">
{% endblock %}
{% block body %}

    <h1>Mon profil</h1>
    <br>
    <div>
    {{ form_errors(editForm) }}

   {{ form_start(editForm, {'attr': {'enctype': 'multipart/form-data'}}) }}
    {% if user.PhotoProfil %}
        <aside class="photo">
        <img src="{{ asset('img/PhotoProfil/' ~ user.PhotoProfil) }}" alt="Photo de profil">
        </aside>
    {% endif %}
    {{ form_row(editForm.profilePicture) }}
    <br>
    {{ form_row(editForm.email) }}
        <br>
    {{ form_row(editForm.pseudo) }}
    </div>
    <div></div>
    <section >
        <button type="submit" class="btn">Enregistrer</button>
        <button><a href="{{ path('editPassword') }}">Modifier le mot de passe</a></button>
        <form action="{{ path('delete_Utilisateur', {'id': user.id}) }}" method="post" onsubmit="return confirm('Voulez-vous vraiment supprimer cet utilisateur ?');">
            <input type="hidden" name="_method" value="DELETE">
            <button type="submit" class="btn btn-danger">Supprimer le compte</button>
        </form>
        <button onclick="window.location.href='{{ path('app_accueil') }}'" class="btn">Retour</button>
    </section>
    {{ form_end(editForm) }}

    <h2>Mes recettes</h2>
    {%for recette in user.recettes %}
        <a href="{{path('app_detail', {'id': recette.id}) }}">{{ recette.nom }}</a>
    {% endfor %}
{% endblock %}

{% block title %}

{% endblock %}

