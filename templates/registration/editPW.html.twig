{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('css/normalize.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('css/style.css') }}">
{% endblock %}
{% block body %}
    <h1>Mon profil</h1>

    {{ form_start(editPWForm) }}

    {{ form_row(editPWForm.plainPassword, {
        label: 'Nouveau mot de passe'
    }) }}
    {{ form_row(editPWForm.confirmPassword, {
        label: 'Confirmer le mot de passe'
    }) }}
    {{ form_errors(editPWForm.confirmPassword) }}
    <section>
        <button type="submit" class="btn">Enregistrer</button>
        <button onclick="window.location.href='{{ path('edit') }}'" class="btn">Retour</button>
    </section>
    {{ form_end(editPWForm) }}
{% endblock %}

{% block title %}

{% endblock %}

